{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Debug - GCC",
            "type": "cppdbg",
            "request": "launch",
            "args": [
                "${workspaceFolder}/examples/HelloWorld.clx",
            ],
            "stopAtEntry": false,
            "externalConsole": true,
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/src/Cellox.exe",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "Debug - MSVC",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Cellox.exe",
            "args": [
                "${workspaceFolder}/examples/HelloWorld.clx",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
           "console": "externalTerminal"
        },
        {
            "name": "Benchmark - GCC",
            "type": "cppdbg",
            "request": "launch",
            "args": [
                "${workspaceFolder}/benchmark/benchmarks/Equality.clx",
                "${workspaceFolder}/benchmark/benchmarks/Fibonacci.clx",
                "-c",
                "3"
            ],
            "stopAtEntry": false,
            "externalConsole": true,
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/benchmark/CelloxBenchmarks.exe",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "Benchmark - MSVC",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/benchmark/CelloxBenchmarks.exe",
            "args": [
                "${workspaceFolder}/benchmark/benchmarks/Equality.clx",
                "${workspaceFolder}/benchmark/benchmarks/Fibonacci.clx",
                "-c",
                "3"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
           "console": "externalTerminal"
        },
        {
            "name": "Disassemble - GCC",
            "type": "cppdbg",
            "request": "launch",
            "args": [
                "${workspaceFolder}/optimizer_test_programs/constant_duplicate_removal.clx",
            ],
            "stopAtEntry": false,
            "externalConsole": true,
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/disassembler/CelloxDisassembler.exe",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "Disassemble - MSVC",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/disassembler/CelloxDisassembler.exe",
            "args": [
                "${workspaceFolder}/optimizer_test_programs/constant_duplicate_removal.clx",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
           "console": "externalTerminal"
        }
    ]
}